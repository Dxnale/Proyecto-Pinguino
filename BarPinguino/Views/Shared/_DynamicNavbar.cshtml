@using System.Security.Claims
<ul style="list-style:none;">
    @if (User.IsInRole("Ventas"))
    {
        <li><a class="nbar" asp-controller="Registros" asp-action="RegistrarUser">Registro</a></li>
        <li><a class="nbar" asp-controller="ProcesoVenta" asp-action="Venta">Venta</a></li>
    }
    else if (User.IsInRole("Preparacion"))
    {
        <li><a class="nbar" asp-controller="Functions" asp-action="Preparacion">Preparación</a></li>
    }
    else if (User.IsInRole("Stock"))
    {
        <li><a class="nbar" asp-controller="Functions" asp-action="Inventario">Inventario</a></li>
    }
    else if (User.IsInRole("Admin"))
    {
        <li><a class="nbar" asp-controller="Registros" asp-action="RegistrarUser">Registro</a></li>
        <li><a class="nbar" asp-controller="ProcesoVenta" asp-action="Venta">Venta</a></li>
        <li><a class="nbar" asp-controller="Functions" asp-action="Inventario">Inventario</a></li>
        <li><a class="nbar" asp-controller="Functions" asp-action="Preparacion">Preparación</a></li>
        <li><a class="nbar" asp-controller="Reporte" asp-action="VentasMes">Finanzas</a></li>
        <li><a class="nbar" asp-controller="Maestro" asp-action="Menu">Maestro</a></li>
    }
</ul>

