@{
    ViewData["Title"] = "Login";
}

<section class="center" id="card-section">
    <h1>Login</h1>
    <form class="campo-login" asp-controller="Registros" asp-action="Login" method="post">

        <fieldset>
            <div>
                <input type="text" name="credencial" placeholder="Credencial" aria-label="Credencial" autocomplete="username" required>
            </div>
            <div>
                <input type="password" name="clave" placeholder="Password" aria-label="Password"
                autocomplete="current-password" required>
            </div>
            <div>
                <button type="submit">
                    Login
                </button>
            </div>
            @if (!string.IsNullOrEmpty(ViewData["Error"] as string))
            {
                @ViewBag.Error
            }
            
        </fieldset>
        <fieldset>
            <label>
                <input type="checkbox" role="switch" name="switch" checked=""> Estoy de acuerdo con las
                <a data-discover="true" asp-area="" asp-controller="Home" asp-action="Privacy">Politicas de
                    Privacidad</a>
            </label>
        </fieldset>
        <a asp-controller="Recovery" asp-action="MenuReco">olvidaste tu clave?</a>
    </form>
</section>