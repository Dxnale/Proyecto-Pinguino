@{
    Layout = null;
    ViewBag.Title = "Procedimiento";
}
<head>
    <link rel="stylesheet" href="~/css/pico.slate.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<main class="internalView">
    <h3 style="text-align:center;color:white;">En Preparacion</h3>
    @foreach (var venta in ViewBag.ProductosVenta) 
    {
        <div style="padding:5px;margin:5px;" class="Prcard">
            <h3 class="Ttext"> @venta.NumBoleta</h3>
            <div>
                <p class="Prinfo">ESTADO EN PREPARACION<br>Muy pronto podrás disfrutar de tu cóctel en nuestras instalaciones. Aprovecha este momento especial para compartir y disfrutar en compañía de los demás.</p>
            </div>
        </div>
    }
</main>