@{
    ViewData["Title"] = "Login";
    string invalidCredentialsMessage = ViewBag.InvalidCredentialsMessage;
}

<section class="center" id="card-section">
    <h1>Login</h1>
    <form class="campo-login" asp-controller="Taller" asp-action="Login" method="GET">

        <fieldset>
            <div>
                <input type="text" name="login" placeholder="Login" aria-label="Login" autocomplete="username">
            </div>
            <div>
                <input type="password" name="password" placeholder="Password" aria-label="Password"
                    autocomplete="current-password">
            </div>
            <div>
                <button type="submit">
                    Login
                </button>
                <div class="chapter">@invalidCredentialsMessage</div>
            </div>
        </fieldset>
        <fieldset>
            <label>
                <input type="checkbox" role="switch" name="checker" checked=""> Estoy de acuerdo con las
                <a data-discover="true" asp-area="" asp-controller="Home" asp-action="Privacy">Politicas de
                    Privacidad</a>
            </label>
        </fieldset>
    </form>
</section>