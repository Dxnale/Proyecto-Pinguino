<div class="desktop-content">
    <div class="side-panel">
        <h3 class="title">Panel Admin</h3>
        <ul>
            <partial name="_PanelAdminSidebar" />
        </ul>
    </div>
    <div class="content">
        <section class="form-container">
            <div class="form-section modificar">
                <h2>Modificar Perfil</h2>
                <form method="GET" asp-action="ModificarPerfil">
                    <label for="rut-buscar">Buscar Perfil por RUT</label>
                    <input type="text" id="rut-buscar" name="rut" placeholder="Ingrese el RUT del perfil" required />
                    <button type="submit" class="btn-buscar">Buscar</button>
                </form>
                
                @if (ViewBag.Rut != null)
                {
                    <form method="POST" asp-action="ModificarPerfil">
                        <input type="hidden" id="rut" name="rut" value="@ViewBag.Rut" />

                        <label for="nombre">Nombre</label>
                        <input type="text" id="nombre" name="nombre" value="@ViewBag.Nombre" placeholder="Nombre" required />

                        <label for="apPat">Apellido Paterno</label>
                        <input type="text" id="apPat" name="apPat" value="@ViewBag.ApPat" placeholder="Apellido Paterno" required />

                        <label for="apMat">Apellido Materno</label>
                        <input type="text" id="apMat" name="apMat" value="@ViewBag.ApMat" placeholder="Apellido Materno" required />

                        <label for="edad">Edad</label>
                        <input type="number" id="edad" name="edad" value="@ViewBag.Edad" placeholder="Edad" required />

                        <label for="nivel">Nivel</label>
                        <select id="nivel" name="nivel" required>
                            <option value="1">Administrador</option>
                            <option value="2">Usuario</option>
                        </select>

                        <button type="submit" class="btn-guardar">Guardar Cambios</button>
                    </form>
                }
            </div>
        </section>

    </div>
</div>
