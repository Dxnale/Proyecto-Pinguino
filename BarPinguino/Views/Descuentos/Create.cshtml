@model EVA2TI_BarPinguino.Models.Descuentos

@{
    ViewData["Title"] = "Create";
}

<div id="card-section">
<h1>Create</h1>
<h4>Descuentos</h4>
<hr />
<form asp-action="Create">
            <div asp-validation-summary="ModelOnly"></div>
            <fieldset>
                <label asp-for="SKU"></label>
                <select asp-for="SKU" asp-items="ViewBag.SKU" required></select>
            </fieldset>
            <fieldset>
                <label asp-for="PrecioOriginal"></label>
                <input asp-for="PrecioOriginal" required />
                <span asp-validation-for="PrecioOriginal"></span>
            </fieldset>
            <fieldset>
                <label asp-for="PrecioConDescuento"></label>
                <input asp-for="PrecioConDescuento" required />
                <span asp-validation-for="PrecioConDescuento"></span>
            </fieldset>
            <div>
                <input type="submit" value="Create"/>
            </div>
        </form>
    <a asp-action="Index">Volver</a>
</div>