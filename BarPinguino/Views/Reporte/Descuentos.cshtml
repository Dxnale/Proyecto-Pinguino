@model IEnumerable<Descuentos>

@{
    ViewData["Title"] = "Descuentos";
}

<div class="mobile-message">
    <h3>Por favor usar en modo escritorio</h3>
    <p>Esta vista solo está disponible para pantallas más grandes.</p>
</div>

<div class="desktop-content">
    <div class="side-panel">
        <h3 class="title">@ViewData["Title"]</h3>
        <ul>
            <partial name="_ReporteSidebar" />
        </ul>
    </div>
    <div class="content">
        <div class="grid">
            <form role="search" method="get" action="Descuentos">
                <input id="sku-search" name="search" type="search" placeholder="Ingrese SKU" />
                <button type="submit">Buscar</button>
            </form>
        </div>
        <table class="sales-table">
            <thead>
                <tr>
                    <th scope="col">SKU</th>
                    <th scope="col">Precio</th>
                    <th scope="col">Precio c/Descuento</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var producto in Model)
                    {
                        <tr>
                            <td>@producto.SKU</td>
                            <td>@producto.PrecioOriginal</td>
                            <td>@producto.PrecioConDescuento</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" style="text-align: center">No se encontraron productos con el SKU ingresado.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
