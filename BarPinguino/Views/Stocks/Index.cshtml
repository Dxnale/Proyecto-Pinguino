    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StockCritico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InformeDeStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProveedorNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StockCritico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InformeDeStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProveedorNavigation.Rut)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SKU">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SKU">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SKU">Delete</a>
