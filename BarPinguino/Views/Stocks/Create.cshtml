@model EVA2TI_BarPinguino.Models.Stock

@{
    ViewData["Title"] = "Create";
}

<div id="card-section">
<h1>Create</h1>
<h4>Stock</h4>
<hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <fieldset>
                <label asp-for="NombreProducto"></label>
                <input asp-for="NombreProducto" required />
                <span asp-validation-for="NombreProducto"></span>
            </fieldset>
            <fieldset>
                <label asp-for="Proveedor"></label>
                <select asp-for="Proveedor"ontrol" asp-items="ViewBag.Proveedor" required></select>
            </fieldset>
            <fieldset>
                <label asp-for="CantidadStock"></label>
                <input asp-for="CantidadStock" required />
                <span asp-validation-for="CantidadStock"></span>
            </fieldset>
            <fieldset>
                <label asp-for="StockCritico"></label>
                <input asp-for="StockCritico" required />
                <span asp-validation-for="StockCritico"></span>
            </fieldset>
            <fieldset>
                <label asp-for="Precio"></label>
                <input asp-for="Precio" required />
                <span asp-validation-for="Precio"></span>
            </fieldset>
            <fieldset>
                <label asp-for="InformeDeStock"></label>
                <input asp-for="InformeDeStock" required />
                <span asp-validation-for="InformeDeStock"></span>
            </fieldset>
            <div>
                <input type="submit" value="Create"/>
            </div>
        </form>
    <a asp-action="Index">Volver</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
