@{
    ViewBag.Title = "Consulta";
}

@{
    ViewBag.Title = "Consulta";
}

<main>
    
    <form method="post" asp-action="Consulta" id="form-consulta">
        
        <div>
            <h1>Consulta</h1>
            <label for="txtRut">RUT:</label>
            <input type="text" id="txtRut" name="txtRut" required />
        </div>
        <div>
            <button type="submit">Consultar</button>
        </div>
    </form>

    @if (ViewBag.ShowModal == true)
    {
        <dialog open>
            <article>
                <header>
                    <p>
                        <strong>🗓️ Detalle de la Consulta</strong>
                    </p>
                </header>
                <p>
                    El RUT ingresado es: <strong>@ViewBag.Rut</strong>
                    <!-- Esto es en pro a modificar, Para mostrar todos los datos registrados, del cliente...-->
                </p>
                <div>
                    <button onclick="window.location.href = '@Url.Action("Consulta", "Ventas")'">Volver</button>
                    <button onclick="window.location.href = '@Url.Action("Venta", "Ventas")'">Aceptar</button>
                </div>
            </article>
        </dialog>
    }
</main>
