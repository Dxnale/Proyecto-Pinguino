@{
    ViewBag.Title = "Registrar Usuario";
}

<section class="form-container">
    <div class="form-section registro">
        <h2>Registro</h2>
        <form method="post" asp-action="Registrado">
            <label for="rut">RUT</label>
            <input type="text" id="rut" name="rut" placeholder="Rut" />

            <label for="nombre">Nombre</label>
            <input type="text" id="nombre" name="nombre" placeholder="Nombre" />

            <label for="apellido">Apellido</label>
            <input type="text" id="apellido" name="apellido" placeholder="Apellido" />

            <label for="frecuencia">Frecuencia</label>
            <input type="text" id="frecuencia" name="frecuencia" placeholder="Frecuencia" />

            <label for="descuento">Descuento</label>
            <input type="text" id="descuento" name="descuento" placeholder="Descuento" />

            <button type="submit" >Registrar</button>
        </form>
    </div>
    <div class="divider"></div>
    <div class="form-section consulta">
        <h2>Consulta</h2>
        <form method="post" asp-action="">
            <label for="consulta-rut">RUT</label>
            <input type="text" id="consulta-rut" name="consulta-rut" placeholder="Rut" />

            <button type="submit">Consultar</button>
        </form>
    </div>
</section>
